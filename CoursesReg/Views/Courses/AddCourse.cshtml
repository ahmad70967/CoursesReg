@model CoursesReg.ViewModels.NewCourseViewModel

@{
    ViewBag.Title = "AddCourse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddCourse</h2>


@using (Html.BeginForm("Add", "Courses"))
{

    <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Course.CourseName)
            @Html.TextBoxFor(model => model.Course.CourseName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Course.CourseName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Course.Credits)
            @Html.TextBoxFor(model => model.Course.Credits, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Course.Credits, "", new { @class = "text-danger" })
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Course.DepartmentId)
            @Html.DropDownListFor(model => model.Course.DepartmentId, new SelectList(Model.Department, "Id", "DepartmentName"), "Select Department", new { @class = "form-control" })
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>

}

<div>
    @Html.ActionLink("Back to List", "Listing")
</div>
